# NBA Player Prop Betting System - Environment Variables
# Copy this file to .env and fill in your values

# Optional: The Odds API for prop lines (free tier available)
ODDS_API_KEY=your-odds-api-key

# Ollama Settings (local LLM - free)
# Make sure Ollama is running: ollama serve
# Make sure model is pulled: ollama pull llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120

# Email Configuration (for daily delivery)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_RECIPIENT=recipient@email.com
EMAIL_FROM_NAME=NBA Prop Analyzer

# Analysis Settings
MIN_ODDS=-140
MAX_PICKS=4
MIN_MINUTES_THRESHOLD=24.0

# Time Windows (games)
RECENT_GAMES_WINDOW=5
MEDIUM_GAMES_WINDOW=10
EXTENDED_GAMES_WINDOW=15

# Scheduler Settings
ANALYSIS_HOUR=10
ANALYSIS_MINUTE=0
ANALYSIS_TIMEZONE=America/New_York

# LLM Generation Settings
LLM_MAX_TOKENS=1500
LLM_TEMPERATURE=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/nba_props.log
